# Environment variables for Nexus Eternal
# Copy this file to .env and modify as needed

# Development settings
NODE_ENV=development
VITE_DEBUG_MODE=true
VITE_SHOW_STATS=true

# Audio settings
VITE_MASTER_VOLUME=1.0
VITE_MUSIC_VOLUME=0.7
VITE_SFX_VOLUME=0.8

# Game settings
VITE_ENABLE_CHEATS=true
VITE_AUTO_SAVE=true
VITE_SAVE_INTERVAL=30000

# Graphics settings
VITE_DEFAULT_QUALITY=high
VITE_ENABLE_SHADOWS=true
VITE_ENABLE_POST_PROCESSING=true
VITE_TARGET_FPS=60

# Blockchain and Authentication Configuration
# ==========================================

# Privy Configuration (Required)
# Get your app ID from https://dashboard.privy.io
VITE_PRIVY_APP_ID=your_privy_app_id_here
VITE_PRIVY_APP_SECRET=your_privy_app_secret_here

# Wallet Configuration (Required for blockchain transactions)
# This wallet must have the GAME_ROLE on the contract to call updatePlayerData
VITE_WALLET_PRIVATE_KEY=0x_your_private_key_here

# API Secrets (Optional - for future server-side operations)
VITE_API_SECRET=your_api_secret_here
VITE_CLIENT_API_SECRET=your_client_api_secret_here

# App Configuration
VITE_APP_URL=http://localhost:3000

# Smart Contract Configuration
# Deploy your own contract and update this address
VITE_GAME_CONTRACT_ADDRESS=0x0000000000000000000000000000000000000000

# Monad Testnet Configuration
VITE_RPC_URL=https://testnet.monad.network

# API endpoints (if needed for additional features)
# VITE_API_BASE_URL=https://api.nexuseternal.com
# VITE_API_KEY=your_api_key_here